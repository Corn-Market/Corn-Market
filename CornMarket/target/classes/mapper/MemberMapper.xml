<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.corn.market.MemberMapper">


 <!-- ===========select============== -->
 
  	<!-- 아이디 중복검사 -->
  	<select id="idCheck" resultType="int">
  	<![CDATA[
  		select count(*) from user_tbl22  where user_id = #{user_id}
  	]]>
  	
  	</select>
  	
  	<!-- 닉네임  중복검사 -->
  	<select id="nicknameCheck" resultType="int">
  	<![CDATA[
  		select count(*) from user_tbl22  where nickname = #{nickname}
  	]]>
  	</select>	
  	

	<!-- 로그인 -->
      <select id="memberLogin" resultType="Member">
      
         select user_id,nickname,temperature,profile_img,join_date FROM USER_TBL22 
          where user_id = #{user_id} and user_pw = #{user_pw}
      
      </select>
      
      
       	<!--  로그인시 아아디 유무 확인   -->
      <select id="getMemberById" resultType="Member">
		<![CDATA[
			SELECT *
			FROM member
			WHERE user_id = #{user_id} and user_pw =#{user_pw}
		]]>
	</select>
  
  <!-- ===========insert============== -->
      <!-- 회원가입  -->
  	<insert id="memberSignup" parameterType="Member" >
  	<![CDATA[
  		insert into user_tbl22
  		 values(#{user_id}, #{user_pw}, #{user_name}, #{nickname}, #{email}, #{phone},DEFAULT,DEFAULT,DEFAULT )
	]]>
  	</insert>
