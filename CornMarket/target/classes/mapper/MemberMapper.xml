<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.corn.market.MemberMapper">

	<!-- 아이디 중복검사 -->
	<select id="idCheck" parameterType="Member" resultType="int">
  	SELECT count(*) FROM USER_TBL22 WHERE user_id = #{user_id}
	</select>

	<!-- 닉네임 중복검사 -->
	<select id="nicknameCheck" resultType="int">
	SELECT count(nickname)FROM USER_TBL22 WHERE nickname=#{nickname} 
	</select>

	<!-- 로그인 -->
	<select id="memberLogin" resultType="Member">
	select user_id,user_pw
	 FROM USER_TBL22
	where user_id = #{user_id}
	  and user_pw = #{user_pw}
	</select>
	
	
	<!-- 회원가입 -->
	<insert id="memberSignup" parameterType="Member">

  	<![CDATA[
  		insert into user_tbl22
  		values(#{user_id}, #{user_pw}, #{user_name}, 
  		#{nickname}, #{email}, #{phone},DEFAULT,DEFAULT,DEFAULT)
	]]>
	</insert>
	
	<!--카카오로그인  -->
	<insert id="kakaoSignup" parameterType="Member">

  	<![CDATA[
  		insert into user_tbl22
  		 values(#{user_id}, '1234', #{user_name}, 
  		 #{nickname}, #{email},'010-0000-0000',DEFAULT,DEFAULT,DEFAULT)
	]]>
	</insert>
	


</mapper>

